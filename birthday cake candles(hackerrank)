#include <iostream>
using namespace std;
int main()
{
    int n,max;  //no. of candles
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++)
    {
        cin>>A[i];    //height of each candle
        max=A[0];
       
    }
    for(int i=0;i<n;i++)
    {
    if(A[i]>max)
     {
         max=A[i];
     }
    }
    int c=0;
    for(int i=0;i<n;i++)
    {
        if(A[i]==max)
        c++;
    }
     cout<<c;
     return 0;
}
