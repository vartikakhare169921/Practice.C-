#include <iostream>
using namespace  std;
int main()
{
int n,m,sum1=0;
cout<<"enter the size of matrix: ";
cin>>m>>n;
cout<<"enter the elements of matrix: ";
int A[m][n];
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cin>>A[i][j];
    }
}
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        sum1=sum1+A[i][j];
    }
    cout<<"sum of row "<<i<<" is "<< sum1<<endl;
    sum1=0;
}
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        sum1=sum1+A[j][i];
    }
    cout<<"sum of column "<<i<<" is "<<sum1<<endl;
    sum1=0;
}
    return 0;
}
