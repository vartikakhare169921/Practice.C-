#include <iostream>
using namespace std;
int main()
{
    int t,n,h=1,H;
    cin>>t;
    while(t--)
    {
       cin>>n;
       for(int i=0;i<=n;i++)
       {   
           if(i==0)
           {
               H=h;
           }
           else if(i%2==0)
           {
               H=H+1;
           }
           if(i%2!=0)
           {
               H=(2*H);
           }
       } 
       cout<<H<<endl;
    }
    return 0;
}
