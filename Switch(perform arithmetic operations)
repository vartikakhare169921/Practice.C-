#include <iostream>
using namespace std;
int main()
{
int choice,a,b,c;
cout<<"Menu:"<<endl;
cout<<"option 1. Add\n"<<"option 2. Substract\n"<<"option 3. Multi\n"<<"option 4. Divide\n";
cout<<"enter the choice ";
cin>>choice;
cout<<"enter 2 nos. ";
cin>>a>>b;
switch(choice)
{
    case 1: c=a+b;
            break;
    case 2: c=a-b;
            break;
    case 3:  c=a*b;
            break;
    case 4: c=a/b;
            break;
    default : cout<<"invalid choice";
            exit(0);
}
cout<<"output is "<<c;
return 0;
}
